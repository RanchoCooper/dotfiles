<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="16" />
    <option name="FONT_FAMILY" value="Consolas" />
    <option name="USE_LIGATURES" value="true" />
  </component>
  <component name="EditorSettings">
    <option name="SOFT_WRAP_FILE_MASKS" value="*.md; *.txt; *.rst; *.adoc" />
    <option name="SHOW_QUICK_DOC_ON_MOUSE_OVER_ELEMENT" value="true" />
  </component>
  <component name="TodoConfiguration">
    <pattern useCustomColors="true" pattern="\b(todo|fixme|pending)\b.*">
      <option name="FOREGROUND" value="b5240e" />
      <option name="BACKGROUND" value="3745" />
      <option name="FONT_TYPE" value="1" />
      <option name="EFFECT_COLOR" value="3745" />
      <option name="ERROR_STRIPE_COLOR" value="b58900" />
      <option name="EFFECT_TYPE" value="2" />
    </pattern>
  </component>
</application>